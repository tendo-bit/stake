pragma solidity ^0.8.9;

import { IAxelarGateway } from '@axelar-network/axelar-gmp-sdk-solidity/contracts/interfaces/IAxelarGateway.sol';
import { IAxelarGasService } from '@axelar-network/axelar-gmp-sdk-solidity/contracts/interfaces/IAxelarGasService.sol';
import "../interfaces/IStaking.sol";

contract ExchangeRatioSender {
    IAxelarGasService public immutable gasService;
    IAxelarGateway public immutable gateway;
    address public uniEth;
    event Sent(uint256 ratio);

    constructor(address gateway_, address gasService_, address unieth_) {
        gasService = IAxelarGasService(gasService_);
        gateway = IAxelarGateway(gateway_);
        uniEth = unieth_;
    }

    function updateExchangeRatio(
        string calldata destinationChain,
        string calldata destinationAddress
    ) external payable {
        uint256 ratio = IStaking(uniEth).exchangeRatio();
        bytes memory payload = abi.encode(ratio);
        gasService.payNativeGasForContractCall{value: msg.value} (
            address(this),
            destinationChain,
            destinationAddress,
            payload,
            msg.sender
        );

        gateway.callContract(destinationChain,destinationAddress,payload);
        emit Sent(ratio);
    }
}